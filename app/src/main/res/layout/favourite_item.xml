<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/favourite_pic_container"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp">
        <ImageView
            android:id="@+id/favourite_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/head_pic"
            android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/favourite_pic_container">
            <TextView
                android:id="@+id/name_of_favourite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#3f454b"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/num_of_favourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="14dp"
                    android:textColor="#737479"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ä¸ª"
                    android:textSize="14dp"
                    android:textColor="#737479"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/enter_favourite"
            android:src="@drawable/enter_favourite"
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>